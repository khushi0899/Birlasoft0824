@model Medicare.Models.Consultation

@{
    ViewData["Title"] = "Create";
}


<style>
    .box {
        background: #3fbbc0;
    }

    .contact-form {
        background: #fff;
        margin-top: 10%;
        margin-bottom: 5%;
        width: 70%;
    }

        .contact-form .form-control {
            border-radius: 1rem;
        }

        .contact-form form {
            padding: 14%;
        }

            .contact-form form .row {
                margin-bottom: -7%;
            }

        .contact-form h3 {
            margin-bottom: 8%;
            margin-top: -10%;
            text-align: center;
            color: #0062cc;
        }

        .contact-form h5 {
            margin: 10px;
            padding: 10px;
            color: #0062cc;
            border: 2px solid;
            text-align: center;
        }

        .contact-form .btnContact {
            width: 50%;
            border: none;
            border-radius: 1rem;
            padding: 1.5%;
            background: #dc3545;
            font-weight: 600;
            color: #fff;
            cursor: pointer;
        }

    .btnContactSubmit {
        width: 50%;
    }
</style>


<div class="box">
    <div class="container contact-form">
        <div class="contact-image">
            @*  <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>*@
        </div>
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="text-center">Vedio Consultations For Psychiatry</h3><br />
                    <h5>Psychiatry Fee<br /><strong>499/-</strong></h5>
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-primary bold">
                        <label asp-for="PatientName" class="control-label"></label>
                        <input asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName" class="text-danger" placeholder="Patient Name"></span>
                    </div>
                    <div class="form-group text-primary bold">
                        <label asp-for="MobileNo" class="control-label"></label>
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger" placeholder="Mobile Number"></span>
                    </div>
                    <div class="form-group text-primary bold">
                        <input class="form-check-input" asp-for="ConsultationStatus" /> @Html.DisplayNameFor(model => model.ConsultationStatus)

                    </div>
                    <div class="form-group text-primary bold">
                        <label asp-for="DrId" class="control-label">Dr Name</label>
                        <select asp-for="DrId" class="form-control" asp-items="ViewBag.DrId"></select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group text-primary bold">
                        <a class="align-center"><img src="https://cdn.vectorstock.com/i/preview-2x/39/52/cartoon-doctor-vector-21683952.webp" height="300px" width="350px" /></a>
                    </div>
                </div>
                <div class="form-group">
                    <input asp-area="Manager" asp-controller="Consultations" asp-action="ConsultPediatric" type="submit" value="Consult Confirm" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
