@model Medicare.Models.Consultation

@{
    ViewData["Title"] = "Create";
}

<style>

      .card{
          height:250px;
          width:180px;
           margin: 0 0.5em;
    box-shadow: 2px 6px 8px 0 rgba(22, 22, 26, 0.18);
    border: none;
    border-radius: 0;
      }
      .card h5{
          font-size:15px;
      }

      .box{
            background:#3fbbc0;
      }
      .contact-form{
          background: #fff;
          margin-top: 10%;
          margin-bottom: 5%;
          width: 70%;
      }
      .contact-form .form-control{
          border-radius:1rem;
      }
      .contact-form form{
          padding: 14%;
      }
      .contact-form form .row{
          margin-bottom: -7%;
      }
      .contact-form h3{
          margin-bottom: 8%;
          margin-top: -10%;
          text-align: center;
          color: #0062cc;

      }
      .contact-form h5{
          margin:10px;
          padding:10px;
          color:#0062cc;
          border:2px solid;
          text-align:center;
      }
      .contact-form .btnContact {
          width: 50%;
          border: none;
          border-radius: 1rem;
          padding: 1.5%;
          background: #dc3545;
          font-weight: 600;
          color: #fff;
          cursor: pointer;
      }
      .btnContactSubmit
      {
          width: 50%;
          }
</style>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://www.samhouston.net/images/uploads/_1060x500_crop_center-center_none/iStock-1200969581.jpg" alt="vedio consultation" height="500px">
            <div class="carousel-caption d-none d-md-block text-dark bold text-left" style="bottom:0%; margin-left:0px">
                <h1>Skip the travel!<br />Take Online Doctor<br /> Consultation<br /></h1><h4> Private consultation + Audio call<br /> Starts at just ₹499</h4>
                <p>Vedio Consultation </p>
            </div>
        </div>
    </div>
</div>

<div>
    <br /><br />
    <h1>
        25+ Specialities
    </h1>
    <h3>Consult with top doctors across specialities</h3>
    <br /><br />
</div>

